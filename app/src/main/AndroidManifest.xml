<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.alexbelogurow.dbcoursework">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Activity.ActivityPatient">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable">
            </meta-data>
        </activity>


        <activity
            android:name=".Activity.ActivityAddPatient"
            android:label="@string/title_activity_add_patient"
            android:parentActivityName=".Activity.ActivityPatient"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alexbelogurow.dbcoursework.Activity.ActivityPatient"/>
        </activity>

        <activity
            android:name=".Activity.ActivityDoctor">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable">
            </meta-data>
        </activity>

        <activity
            android:name=".Activity.ActivityAddDoctor"
            android:label="@string/title_activity_add_doctor"
            android:parentActivityName=".Activity.ActivityDoctor"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".Activity.ActivityAddDoctorForPatient">
        </activity>
        <activity android:name=".Activity.ActivityDiagnoses">
        </activity>
        <activity
            android:name=".Activity.ActivityDoctorInfo"
            android:label="@string/title_activity_doctor_info"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".Activity.ActivityAddDiagnosesForPatient">
        </activity>
        <activity
            android:name=".Activity.ActivityPatientInfo"
            android:label="@string/patient"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".Activity.ActivityDiagnosesInfo"
            android:label="@string/title_activity_diagnoses_info"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>